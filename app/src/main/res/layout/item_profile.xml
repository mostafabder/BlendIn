<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/offWhite"
    android:layout_height="wrap_content"
    >
    <com.github.vipulasri.timelineview.TimelineView
        android:id="@+id/time_marker"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:marker="@drawable/oval_card"
        app:markerSize="7dp"
        app:lineSize="3dp"
        app:markerInCenter="false"
        app:line="@color/dark_blue"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:paddingBottom="10dp">
        <TextView
            android:id="@+id/tv_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hamda Helal is at Loca Loca Cafe"
            android:textColor="@color/blue"
            android:layout_marginBottom="10dp"/>
        <ImageView
            android:id="@+id/iv_profileImage"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/kappa2"
            android:scaleType="centerCrop"
            android:layout_marginBottom="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="25dp"
                android:src="@drawable/like"
                android:padding="2dp"
                />
            <TextView
                android:id="@+id/tvItemLikesNumProfile"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="100"
                android:textColor="@color/blue"
                android:textSize="12sp"
                android:layout_marginTop="5dp"
                />
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="25dp"
                android:layout_marginStart="5dp"
                android:src="@drawable/comments"
                android:padding="2dp"
                />
            <TextView
                android:id="@+id/tvItemCommentsNumProfile"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="90"
                android:textColor="@color/blue"
                android:textSize="12sp"
                android:layout_marginTop="5dp"
                />
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="6"
                android:layout_height="0.01dp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>

