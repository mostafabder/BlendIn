<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="15dp"
    android:weightSum="10"
    tools:context="com.example.android.blendin.Fragments.NotificationFragment">
    <!-- TODO: Update blank fragment layout -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_avatar_notification"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_weight="2"
        android:src="@drawable/user" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_weight="7.55">

        <TextView
            android:id="@+id/tv_details_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hamada Helal has lovedByThisUser your photo"
            android:textColor="@color/dark_blue" />

        <TextView
            android:id="@+id/tv_time_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:text="Just now" />
    </RelativeLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="13dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.40"
        android:background="@drawable/oval_card" />
</LinearLayout>
