<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.blendin.Fragments.NewsfeedFragment"
    android:background="@color/offWhite">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/newsfeed_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/hello_blank_fragment" />
    <!-- TODO: Update blank fragment layout -->

    <com.github.clans.fab.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        android:src="@drawable/plus"
        fab:fab_colorNormal="@color/dark_blue"
        fab:fab_colorPressed="#FF935EBE"
        fab:fab_colorRipple="#FF935EBE"
        app:fab_shadowRadius="3dp"
        fab:fab_showAnimation="@anim/show_from_bottom"
        fab:fab_hideAnimation="@anim/hide_to_bottom"/>
</FrameLayout>
